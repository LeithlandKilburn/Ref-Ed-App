<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#cce6ff"
android:fillViewport="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#73cd6a"
    tools:context="com.example.vaibh.refed.Login">


    <TextView
        android:id="@+id/arQ"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/arQ2"
        android:layout_alignStart="@+id/arQ2"
        android:layout_marginStart="19dp"
        android:layout_marginTop="17dp"
        android:text="ما اللغة التي تتحدثها؟"
        android:textAlignment="textStart"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/arQ2"
        android:layout_width="257dp"
        android:layout_height="31dp"
        android:layout_below="@+id/txtWelcome"
        android:layout_alignStart="@+id/txtWelcome"
        android:layout_alignEnd="@+id/txtWelcome"
        android:layout_marginStart="-19dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="-40dp"
        android:text="What language do you speak?"
        android:textAlignment="textStart"
        android:textSize="18sp" />

    <RadioButton
        android:id="@+id/radBtAr"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtWelcome"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="234dp"
        android:layout_marginTop="216dp"
        android:layout_marginEnd="84dp"
        android:text="اللغة العربية الفصحى" />

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radBtEng"
        android:layout_alignParentStart="true"
        android:layout_marginStart="152dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="304dp"
        android:text="Continue" />

    <TextView
        android:id="@+id/txtWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:includeFontPadding="true"
        android:text="Welcome to RefEd"
        android:textSize="24sp" />

    <RadioButton
        android:id="@+id/radBtEng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtWelcome"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="86dp"
        android:layout_marginTop="217dp"
        android:layout_marginEnd="213dp"
        android:text="English" />

</RelativeLayout>
</ScrollView>